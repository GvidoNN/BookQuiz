<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foregroundGravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="300dp"
            android:layout_marginTop="20dp"
            android:background="@color/blue"
            android:backgroundTint="@color/blue"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvBookSubject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/nunito_medium"
                android:gravity="center"
                android:text="Manhattan on a dark November evening around eight oâ€™clock was bleak and uninviting, an east wind driving heavy rain before it, as Henry Morgan turned the corner of a side street into Park Avenue."
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imBook1"
                android:layout_width="100dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/dark_justice" />

            <ImageView
                android:id="@+id/imBook2"
                android:layout_width="100dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:foregroundGravity="center|center_horizontal"
                app:srcCompat="@drawable/dark_justice" />

            <ImageView
                android:id="@+id/imBook3"
                android:layout_width="100dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/dog" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvTextStep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="TextView"
            android:fontFamily="@font/nunito_medium"
            android:textSize="17sp" />

        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            ads:adSize="BANNER"
            android:layout_marginTop="30dp"
            ads:adUnitId="ca-app-pub-7592888554989577/5685097324" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>